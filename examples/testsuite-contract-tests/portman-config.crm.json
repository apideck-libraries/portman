{
  "version": 1.0,
  "tests": {
    "contractTests": [
      {
        "openApiOperation": "*::/crm/*",
        "statusSuccess": {
          "enabled": true
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "statusCode": {
          "enabled": true,
          "code": 400
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "excludeForOperations": ["leadsAdd", "GET::/crm/leads/{id}"],
        "responseTime": {
          "enabled": true,
          "maxMs": 300
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "contentType": {
          "enabled": true
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "jsonBody": {
          "enabled": true
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "schemaValidation": {
          "enabled": true
        }
      },
      {
        "openApiOperation": "*::/crm/*",
        "headersPresent": {
          "enabled": true
        }
      }
    ]
  }
}
